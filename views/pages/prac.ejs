<!DOCTYPE html>
<html>
<head>

 <meta charset="UTF-8">
<% include ../partials/header.ejs %>
<link rel="stylesheet" type="text/css" href="stylesheets/star.css">
<script src="//ajax.googleapis.com/ajax/libs/angularjs/undefined/angular.min.js"></script>

<style>
	
body {
	background-color: #fff;
	margin: 0px;
	padding: 0px;
}

div {
	background-color: #fff;
	padding: 0px;
	margin:0px;
}
	
.error{
	display: none;
	margin-left: 10px;
}		

.error_show{
	color: red;
	margin-left: 10px;
}

	
</style>

</head>
<body ng-app="form">
 <% include ../partials/nav.ejs %>
  
<div id="container" style="background-color:#fff;">
 

<div class="row">
<div class="col-sm-8">
<h3>The contact form!</h3>


<div ng-controller="ExampleController">
<form id="contact" method="post" action="" novalidate class="simple-form">

	<div>
		<label for="contact_name">Name:</label>
		<input type="text" id="contact_name" name="name"></input>
		<span class="error">This field is required</span>
	</div>

	<div>
		<label for="contact_email">Email:</label>
		<input type="email" id="contact_email" name="email"></input>
		<span class="error">A valid email address is required</span>				
	</div>			
	
	<div>
		<label for="phone">Phone Number:</label>
		<input type="url" id="phone" name="phone"></input>
		<span class="error">A valid phone number is required</span>								
	</div>						
	
		<div>
		<label for="zip">Zip Code:</label>
		<input type="url" id="zip" name="zip"></input>
		<span class="error">A valid zip code is required</span>								
	</div>	
	
	<div>
		<label for="contact_message">Message:</label>
		<textarea id="contact_message" name="message"></textarea>
		<span class="error">This field is required</span>												
	</div>					
	
	<div id="contact_submit">				
		<button type="submit">Submit</button>
	<input type="button" ng-click="reset()" value="Reset" />
	</form>
	</div>

</div></div>
  <br /><br /><br />
</div>

<script>
  angular.module('form', [])
    .controller('ExampleController', ['$scope', function($scope) {
 

      $scope.reset();
    }]);
</script>

</body>
</html>
